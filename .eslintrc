{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:flowtype/recommended",
        "plugin:jsdoc/recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "flowtype",
        "no-loops",
        "jsdoc",
        "prettier"
    ],
    "settings": {
        "flowtype": {
            "onlyFilesWithFlowAnnotation": true
        }
    },
    "rules": {
        "no-loops/no-loops": "error",
        "prettier/prettier": ["error", {
            "endOfLine": "auto"
        }],
        "no-var": "error"
    }
}
